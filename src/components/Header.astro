---
import { Image } from "astro:assets";
import Menu from "./Menu.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
import logoImage from "../img/logo.png";
---

<style>
  header {
    width: 90%;
    max-width: 90%;
    margin: 1rem auto 0;
    align-self: center;
  }
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  div {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  img {
    width: 8rem;
    height: 8rem;
    border-radius: 8rem;
    border: 5px solid #5e1da2;
    margin-right: 1rem;
  }
  a {
    text-decoration: none;
  }
  p {
    font-size: 2rem;
    font-weight: 800;
    color: #ad00c9; /* fallback */
    background: linear-gradient(50deg, #cb17b0 0%, #5e1da2 40%, #cb17b0 55%);
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  @media screen and (max-width: 800px) {
    p {
      font-size: 1.5rem;
    }
    img {
      width: 5rem;
      height: 5rem;
      border-radius: 5rem;
      margin-right: 0.5rem;
    }
  }
</style>

<header>
  <nav>
    <a href="/">
      <div style="gap: 0">
        <Image
          src={logoImage}
          alt="A drawing of me loving my work, from my daughter"
          priority
        />
        <p>Alec<br />Ostrander</p>
      </div>
    </a>
    <Navigation />
    <div style="justify-content: flex-end;">
      <ThemeIcon />
      <Menu />
    </div>
  </nav>
</header>
